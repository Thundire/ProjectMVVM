<Window x:Class="Autofac_QA_Test.Views.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autofac_QA_Test.Views"
        xmlns:viewModels="clr-namespace:Autofac_QA_Test.ViewModels"
        mc:Ignorable="d"
        Title="Confirm" MinHeight="90" MinWidth="200" SizeToContent="WidthAndHeight"
        d:DataContext="{d:DesignInstance viewModels:ConfirmVM}">
    <DockPanel Margin="4">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,4,0"/>
            <Button Content="Confirm" Command="{Binding ConfirmCommand}"/>
        </StackPanel>

        <TextBlock Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </DockPanel>
</Window>
