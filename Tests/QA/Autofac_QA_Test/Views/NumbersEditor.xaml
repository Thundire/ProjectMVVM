<Window x:Class="Autofac_QA_Test.Views.NumbersEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autofac_QA_Test.Views"
        xmlns:viewModels="clr-namespace:Autofac_QA_Test.ViewModels"
        mc:Ignorable="d"
        Title="NumbersEditor" Height="116" Width="200"
        d:DataContext="{d:DesignInstance viewModels:NumbersEditFormVM}">
    <StackPanel Margin="4">
        <TextBlock Text="Number 1"/>
        <TextBox Text="{Binding ToEdit.Number1}"/>
        <TextBlock Text="Number 2"/>
        <TextBox Text="{Binding ToEdit.Number2}"/>

        <StackPanel Orientation="Horizontal" Margin="0,4">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,4,0"/>
            <Button Content="Confirm" Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
