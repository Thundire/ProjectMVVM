<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vms="clr-namespace:AutofacSample.ViewModels">
    <DataTemplate x:Key="Preview" DataType="{x:Type vms:ContentObjectVM}">
        <StackPanel>
            <TextBlock Text="{Binding Header}"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="Test1" DataType="{x:Type vms:ContentObjectVM}">
        <StackPanel Background="Green">
            <TextBlock Text="{Binding Header}"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
            <Button Content="Change Description"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="Test2" DataType="{x:Type vms:ContentObjectVM}">
        <StackPanel Background="Red">
            <TextBlock Text="{Binding Header}"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="ChangeDescription" DataType="{x:Type vms:ChangeDescriptionVM}">
        <StackPanel>
            <TextBox Text="{Binding Description}" TextWrapping="Wrap"/>
            <Button Content="Confirm" Command="{Binding Confirm}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>